<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="rabbitConnectionConfig"
		class="com.enernoc.openadr.core.connector.rabbitmq.ConnectionConfig">
		<property name="maxChannels" value="6" />
		<property name="maxConnections" value="3" />
		<property name="host" value="192.168.189.135" />
		<property name="port" value="5672" />
		
	</bean>

	<bean id="rabbitConsumerConfig"
		class="com.enernoc.openadr.core.connector.rabbitmq.ConsumerClientConfig">
		<property name="connectionConfig">
			<ref bean="rabbitConnectionConfig" />
		</property>
		<property name="queueName" value="AMQP_VEN_IN_Queue" />
		<property name="exchangeName"  value="AMQP_VEN_IN_Exchange"/>
	</bean>
	
	<bean id="rabbitProducerConfig"
    class="com.enernoc.openadr.core.connector.rabbitmq.ProducerClientConfig">
    <property name="connectionConfig">
      <ref bean="rabbitConnectionConfig" />
    </property>
    <property name="exchangeName"  value="AMQP_GW_OUT_Exchange"/>
  </bean>
  
</beans>