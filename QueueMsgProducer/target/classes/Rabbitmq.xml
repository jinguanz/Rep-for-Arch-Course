<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="rabbitConnectionConfig"
		class="com.enernoc.openadr.core.connector.rabbitmq.ConnectionConfig">
		<property name="maxChannels" value="6" />
		<property name="maxConnections" value="3" />
		<property name="host" value="ec2-184-73-114-125.compute-1.amazonaws.com" />
		<property name="port" value="5672" />
		
	</bean>

	
	<bean id="rabbitProducerConfig"
    class="com.enernoc.openadr.core.connector.rabbitmq.ProducerClientConfig">
    <property name="connectionConfig">
      <ref bean="rabbitConnectionConfig" />
    </property>
    <property name="exchangeName"  value="GW_PER_Exchange"/>
  </bean>
  
</beans>